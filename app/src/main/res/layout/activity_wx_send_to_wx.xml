<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:layout_gravity="center"
            android:scrollbars="none"
            android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"

        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/is_timeline_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="是否分享到朋友圈"
                android:textColor="#FF000000"/>

        </LinearLayout>


        <Button
            android:id="@+id/send_text"
            style="@style/Click.Button.Style"

            android:layout_margin="10dp"
            android:text="发送文本"/>

        <Button
            android:id="@+id/send_img"
            style="@style/Click.Button.Style"

            android:layout_margin="10dp"
            android:text="发送图片"/>

        <Button
            android:id="@+id/send_music"
            style="@style/Click.Button.Style"

            android:layout_margin="10dp"
            android:text="发送音乐"/>

        <Button
            android:id="@+id/send_video"
            style="@style/Click.Button.Style"

            android:layout_margin="10dp"
            android:text="发送视频"/>

        <Button
            android:id="@+id/send_webpage"
            style="@style/Click.Button.Style"

            android:layout_margin="10dp"
            android:text="发送网页"/>

        <Button
            android:id="@+id/send_appdata"
            style="@style/Click.Button.Style"

            android:layout_margin="10dp"
            android:text="发送app消息"/>

        <Button
            android:id="@+id/send_emoji"
            style="@style/Click.Button.Style"

            android:layout_margin="10dp"
            android:text="发送表情消息"/>

        <Button
            android:id="@+id/get_token"
            style="@style/Click.Button.Style"

            android:layout_margin="10dp"
            android:text="获取微信访问Token"/>

        <Button
            android:id="@+id/unregister"
            style="@style/Click.Button.Style"

            android:layout_margin="10dp"
            android:text="从微信反注册"/>

    </LinearLayout>
</ScrollView>