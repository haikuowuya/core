<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:id="@+id/linear_wx_container"
              android:orientation="vertical"
    >

    <TextView
        android:id="@+id/result_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:visibility="gone"
        android:text="这是SDK_Sample的入口界面"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/reg_btn"
        style="@style/Click.Button.Style"


        android:layout_margin="10dp"
        android:text="注册"/>

    <Button
        android:id="@+id/goto_send_btn"
        style="@style/Click.Button.Style"


        android:layout_margin="10dp"
        android:text="跳转到发消息界面"/>

    <Button
        android:id="@+id/launch_wx_btn"
        style="@style/Click.Button.Style"


        android:layout_margin="10dp"
        android:text="启动微信"/>

    <Button
        android:id="@+id/check_timeline_supported_btn"
        style="@style/Click.Button.Style"

        android:layout_margin="10dp"
        android:text="检查是否支持发送到朋友圈"/>

</LinearLayout>